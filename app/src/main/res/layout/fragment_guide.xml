<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="32dp"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Judul Panduan -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/guide_title"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/green_primary"
            android:gravity="center"
            android:paddingBottom="16dp" />

        <!-- Langkah-langkah Panduan -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp">

            <!-- Loop ini bisa kamu duplikat untuk step 1 sampai 6 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="8dp"
                android:backgroundTint="@color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/guide_step_1"
                    android:textSize="16sp"
                    android:padding="12dp"
                    android:textColor="@color/black" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Loop ini bisa kamu duplikat untuk step 1 sampai 6 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="8dp"
                android:backgroundTint="@color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/guide_step_2"
                    android:textSize="16sp"
                    android:padding="12dp"
                    android:textColor="@color/black" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Loop ini bisa kamu duplikat untuk step 1 sampai 6 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="8dp"
                android:backgroundTint="@color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/guide_step_3"
                    android:textSize="16sp"
                    android:padding="12dp"
                    android:textColor="@color/black" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Loop ini bisa kamu duplikat untuk step 1 sampai 6 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="8dp"
                android:backgroundTint="@color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/guide_step_4"
                    android:textSize="16sp"
                    android:padding="12dp"
                    android:textColor="@color/black" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Loop ini bisa kamu duplikat untuk step 1 sampai 6 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="8dp"
                android:backgroundTint="@color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/guide_step_5"
                    android:textSize="16sp"
                    android:padding="12dp"
                    android:textColor="@color/black" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Loop ini bisa kamu duplikat untuk step 1 sampai 6 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="8dp"
                android:backgroundTint="@color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/guide_step_6"
                    android:textSize="16sp"
                    android:padding="12dp"
                    android:textColor="@color/black" />
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray" />

        <!-- Informasi Aplikasi -->
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/logoo"
            android:contentDescription="@string/app_name" />

        <TextView
            android:id="@+id/appName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingTop="8dp"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_developed_for"
            android:textSize="16sp"
            android:paddingTop="4dp"
            android:textColor="@color/green_primary_dark" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_description"
            android:gravity="center"
            android:paddingTop="8dp"
            android:textSize="14sp"
            android:textColor="@color/black" />

        <!-- SMK Info -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/logoSMK"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_sekolah"
                android:contentDescription="@string/logo_smk" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/smk_negeri_1_kuningan"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:textColor="@color/black" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
